    termsPopup.style.display = 'none';
      }

    // Add an event listener to the close icon to close the terms pop-up
    closeIcon.addEventListener('click', closeTermsPopup);

    // Add an event listener to the terms link to navigate users to the terms page
    termsLink.addEventListener('click', function(event) {
        event.preventDefault(); // Prevent default link behavior
        window.location.href = '/terms'; // Replace '/terms' with your actual terms page URL
    });

    // Show the terms pop-up when the page loads
    window.addEventListener('load', function() {
        termsPopup.style.bottom = '0'; // Show the pop-up by setting its bottom position to 0
    });
      
